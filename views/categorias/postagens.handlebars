<h2>Postagens da categoria {{categoria.nome}}:</h2>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p class="mx-2">{{descricao}}</p>
            <a href="/postagem/{{_id}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small>Data de publicação: {{data}}</small>

        </div>
    </div>
{{else}}
    <div class="card mt-4">
        <div class="card-body">
            <p>Nenhuma postagem registrada!</p>
        </div>
    </div>
{{/each}}