<h2>Lista de posts: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success" >Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            categoria: <small>{{categoria.nome}}</small><br>
            <small>{{data}}</small><br>
            <a href="/admin/postagem/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagem</button></a>
            <a href="/admin/postagem/delete/{{_id}}"><button class="btn btn-danger mt-3">Deletar postagem</button></a
        </div>
    </div>
{{else}}
    <div class="card mt-4">
        <div class="card-body">
            <p>Nenhuma postagem registrada!</p>
        </div>
    </div>
    
{{/each}}